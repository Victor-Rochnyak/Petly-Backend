	},
	"consumes": [
		"application/json",
		"multipart/form-data"
	],
	"produces": [
		"application/json"
	],
	"servers": [
		{
			"url": "http://localhost:4000"
		}
	],
	"tags": [
		{
			"name": "Auth",
			"description": "Authorization endpoints"
		},
		{
			"name": "User",
			"description": "Authorization endpoints"
		},
		{
			"name": "News",
			"description": "Authorization endpoints"
